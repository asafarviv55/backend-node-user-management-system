generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt  @id @default(autoincrement())
  email    String  @unique
  username String?
  password String?
  role     Role    @relation(fields: [roleId], references: [id])
  roleId   BigInt
}

model Role {
  id   BigInt @id @default(autoincrement())
  name String @unique
  User User[]
}

enum UserRole {
  USER
  ADMIN
}
